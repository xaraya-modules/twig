{# @theme/rss/modules/newsgroups/group.xml.twig #}

{% block user_group %}
{% if error_message is not null %}
        {% else %}
        {% for loop_key1, loop_item1 in items %}{% set loop_index1 = loop.index %}
            <item>
                <title>{{ xar_prep_display(loop_item1['Subject']) }}</title>
                <link>{{ xar_moduleurl('newsgroups', 'user', 'article', {'group': group, 'article': loop_item1['number']}) }}</link>
                <description></description>
                <author>{{ xar_prep_email(xar_prep_display(loop_item1['From'])) }}</author>
                <pubDate>{{ xar_formatdate('%a, %d %b %Y %H.%M.%S GMT', date(loop_item1['Date']).getTimestamp(), false) }}</pubDate>
            </item>
        {% endfor %}
    {% endif %}
{% endblock %}