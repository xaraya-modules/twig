{# modules/authsystem/blocks/login.html.twig #}

{% block login %}
<form id="authsystemBlocksLogin" action="{{ xar_moduleurl('authsystem','user','login') }}" method="post">
        <fieldset>
            <legend>Login</legend>
            <input type="hidden" name="redirecturl" id="returnurl{{ blockid }}"
            value="{{ return_url }}"/>
            <div class="textInputContainer">
                <label for="uname{{ blockid }}" title="{{ xar_translate('Enter your user name') }}">
                Username:</label>
                <input type="text" name="uname" id="uname{{ blockid }}" maxlength="64"/>
            </div>
            <div class="passInputContainer">
                <label for="pass{{ blockid }}" title="{{ xar_translate('Enter your password') }}">
                Password:</label>
                <input type="password" name="pass" id="pass{{ blockid }}" maxlength="64"/>
            </div>
            {% if xar_coremethod('xarConfigVars', 'get', null,'Site.Session.SecurityLevel') != 'High' %}
                <div class="checkInputContainer">
                    <input type="checkbox" name="rememberme" id="rememberme{{ blockid }}" value="1"/>&#160;
                    <label for="rememberme{{ blockid }}">Don't ask for password</label>
                </div>
            {% endif %}
            <div class="submitInputContainer">
                <input type="submit" value="{{ xar_translate('Log In') }}"/>
            </div>
            <p>
                <a href="{{ xar_moduleurl('roles','user','lostpassword') }}">Request new password</a>
            </p>
        </fieldset>
    </form>
{% endblock %}