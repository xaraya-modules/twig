{# @theme/default/pages/user.html.twig #}

{# We use a 2-column layout with main content + 1 sidebar for known users #}
{% extends '@theme/default/pages/layout-2.html.twig' %}

{# Specify a page type to override div id's, e.g. default, user or admin #}
{% set page_type = 'admin-' %}

{# Call blockgroups early so any css and js from them is included #}
{% set admingroup = xar_blockgroup("admin") %}

{% block head_styles_extra %}
    {# Instead of an *_extra block here we could also override the head_styles block and call parent() after inserting this #}
    {{ xar_style({scope: "theme", file: "admin", title: "Xaraya Default Admin Stylesheet"}) }}
{% endblock %}

{% block body_main %}
<div id="{{ page_type }}main">
    <div style="text-align: right">
        <a href="{{ xar_baseurl() }}" style="text-decoration: none">
            {{ xar_modulevar("themes", "SiteName") }}
        </a>
    </div>
    <div id="docpage-1">
        {% block modulespace %}{{ _bl_mainModuleOutput|raw }}{% endblock %}
    </div>
    <div id="docpage-2" style="display: none">
    </div>
</div>
{% endblock %}

{% block body_sidebar1 %}
<div id="sideInfo1" class="{{ page_type }}sideInfo">
    {# Insert the sidebar1 blockgroups here #}
    {# <!-- Convenience link to front end
    Note: the adminmenu block has an option to show this link,
    but you might want to use this, eg, when the adminmenu block isn't displayed
    {% set title = 'Go to the front end interface' %}
    <a href="index.php" title="{{ title|raw }}">
        [ Front end ]
    </a>
    --> #}
    {{ admingroup|raw }}
</div>
{% endblock %}

{% block body_sidebar2 %}
    {# Not used for this layout - see layout-3.html.twig #}
{% endblock %}

{% block body_unused %}
    {# Not used in this theme - any leftover blockgroups go here #}
{% endblock %}
