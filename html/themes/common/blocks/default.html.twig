{# @theme/common/blocks/default.html.twig #}

{% block default %}
<div class="xar-blockgroup-{{ _bl_block_group }}">
        {% if title %}
            <div class="xar-block-title">
                {{ title }}
                {% if _bl_block_id %}
                    {% if xar_security_check('AdminBase') %}
                        <a href="{{ xar_moduleurl('blocks','admin','modify_instance',{'block_id': _bl_block_id, 'tab': 'config'}) }}" title="Edit this block" style="float: right; margin-left: 5px">
                            {% set alttext = 'Modify' %}
                            {{- xar_image({scope: "theme", file: "icons/modify-config.png", class: "xar-icon", alt: alttext}) -}}
                        </a>
                    {% endif %}
                {% endif %}
            </div>
        {% else %}
            {% if _bl_block_id %}
                {% if xar_security_check('AdminBase') %}
                    <div class="xar-block-head">
                        <div class="xar-block-title">
                            <a class="xar-icon" href="{{ xar_moduleurl('blocks','admin','modify_instance',{'block_id': _bl_block_id}) }}" title="Edit this block" style="float: right">
                                {% set alttext = 'Modify' %}
                                {{- xar_image({scope: "theme", file: "icons/modify-config.png", class: "xar-icon", alt: alttext}) -}}
                            </a>
                        </div>
                    </div>
                {% endif %}
            {% endif %}
        {% endif %}
        <div class="xar-block-body">
            {{ content|raw }}
        </div>
    </div>
{% endblock %}