{# @calendar/blocks/modify-month.html.twig #}

{% block modify_month %}
<div class="xar-row">
        <div class="xar-col">
            <label class="xar-form-label help" title="{{ xar_translate('Choose a module for the target URL') }}" for="targetmodule{{ blockid }}"> 
                Module
            </label> 
        </div>
        <div class="xar-col">
            {% set firstline = 'Choose a module' %}
            {% set firstline = {'id': '', 'name': firstline} %}
            {{ xar_data_input({type: "module", name: "targetmodule", firstline: firstline, value: targetmodule, store_prop: "name"}) }}&#160;
            (if none chosen, the the current URL is redisplayed)
        </div>
    </div>
    <div class="xar-row">
        <div class="xar-col">
            <label for="targettype{{ blockid }}" class="help xar-form-label" title="{{ xar_translate('Enter the type for the target URL') }}">
                Type       
           :</label> 
        </div>
        <div class="xar-col">
           <input type="text" name="targettype" id="targettype{{ blockid }}" value="{{ targettype }}" />
        </div>
    </div>
    <div class="xar-row">
        <div class="xar-col">
            <label for="targetfunc{{ blockid }}" class="help xar-form-label" title="{{ xar_translate('Enter the function for the target URL') }}">
                Function       
           :</label> 
        </div>
        <div class="xar-col">
           <input type="text" name="targetfunc" id="targetfunc{{ blockid }}" value="{{ targetfunc }}" />
        </div>
    </div>
{% endblock %}