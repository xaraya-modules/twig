{# @calendar/delete.html.twig #}

{% extends '@calendar/base.html.twig' %}

{% block modulespace %}
<div class="xar-mod-head">
        <span class="xar-mod-title">
            {% if xar_modulevar('calendar', 'useModuleAlias') %}
                {{ xar_var({scope: "module", module: "calendar", name: "aliasname"}) }}
            {% else %}
                Delete Event
            {% endif %}
        </span>
    </div>
    <div class="xar-mod-body">
        <h2>
            {{ xar_translate('Delete Event #(1)', object.itemid) }}
        </h2>
        <h3 class="xar-align-center">
            Confirm Deleting This Event?
        </h3>

        {{ xar_data_display({object: object, tplmodule: tplmodule}) }}

        <form method="post" action="{{ xar_moduleurl('calendar', 'user', 'delete') }}">
            <div class="xar-align-center">
                <input type="hidden" name="authid" id="authid" value="{{ authid }}"/>
                <input type="hidden" name="objectid" id="objectid" value="{{ object.objectid }}"/>
                <input type="hidden" name="modid" id="modid" value="{{ object.moduleid }}"/>
                <input type="hidden" name="itemtype" id="itemtype" value="{{ object.itemtype }}"/>
                <input type="hidden" name="itemid" id="itemid" value="{{ object.itemid }}"/>
                <input type="hidden" name="tplmodule" id="tplmodule" value="{{ tplmodule }}"/>

                <input type="submit" name="confirm" id="confirm" value="{{ xar_translate('Delete') }}" class="xar-margin-thickright"/>
                <input type="submit" name="noconfirm" id="noconfirm" value="{{ xar_translate('Cancel') }}" class="xar-margin-thickleft"/>
            </div>
        </form>
    </div>
{% endblock %}