{# @calendar/includes/display.html.twig #}

{% block display %}
<div class="xar-row">
        <div class="xar-col">
            <label for="windowwidth" title="{{ xar_translate('Width of the window the calendar displays in') }}">
                Calendar Window Width
            </label>
        </div>
        <div class="xar-col">
            {% set value = xar_modulevar('calendar', 'windowwidth') %}
            <input type="text" name="windowwidth" id="windowwidth" value="{{ value }}"/>&#160;px
        </div>
    </div>

    <div class="xar-row">
        <div class="xar-col">
            <label for="minutesperunit" title="{{ xar_translate('The unit the grid in day view represents') }}">
                Grid Unit            
            </label>
        </div>
        <div class="xar-col">
            {% set value = xar_modulevar('calendar', 'minutesperunit') %}
            {% set options = [
                    {'id': 5, 'name': 5},
                    {'id': 10, 'name': 10},
                    {'id': 15, 'name': 15},
                    {'id': 20, 'name': 20},
                    {'id': 30, 'name': 30}
                ] %}
            {{ xar_data_input({type: "dropdown", name: "minutesperunit", id: "minutesperunit", options: options, value: value}) }}&#160;minutes
        </div>
    </div>

    <div class="xar-row">
        <div class="xar-col">
            <label for="unitheight" title="{{ xar_translate('Height in pixels on the screen of the grid unit') }}">            
                Unit height            
            </label>
        </div>
        <div class="xar-col">
            {% set value = xar_modulevar('calendar', 'unitheight') %}
            <input type="text" name="unitheight" id="unitheight" value="{{ value }}"/>&#160;px
        </div>
    </div>

    <div class="xar-row">
        <div class="xar-col">
            <label for="cal_sdow" title="{{ xar_translate('The first day of the week shown on the views') }}">
                Week starts            
            </label>
        </div>
        <div class="xar-col">
            {% set value = xar_modulevar('calendar', 'cal_sdow') %}
            {% set options = [
                    {'id': 0, 'name': xar_translate('Sunday')},
                    {'id': 1, 'name': xar_translate('Monday')},
                    {'id': 2, 'name': xar_translate('Tuesday')},
                    {'id': 3, 'name': xar_translate('Wednesday')},
                    {'id': 4, 'name': xar_translate('Thursday')},
                    {'id': 5, 'name': xar_translate('Friday')},
                    {'id': 6, 'name': xar_translate('Saturday')},
                ] %}
            {{ xar_data_input({type: "dropdown", name: "cal_sdow", id: "cal_sdow", options: options, value: value}) }}
        </div>
    </div>

    <div class="xar-row">
        <div class="xar-col">
            <label for="default_view" title="{{ xar_translate('The calendar default view') }}">
                Default view            
            </label>
        </div>
        <div class="xar-col">
            {% set options = [
                {'id': 'day', 'name': 'Day'},
                {'id': 'week', 'name': 'Week'},
                {'id': 'month', 'name': 'Month'},
                {'id': 'year', 'name': 'Year'},
                {'id': 'customview', 'name': 'Customized'}
            ] %}
            {% set value = xar_modulevar('calendar', 'default_view') %}
            {{ xar_data_input({type: "dropdown", name: "default_view", id: "default_view", options: options, value: value}) }}
        </div>
    </div>

    <div class="xar-row">
        <div class="xar-col">
            <label for="day_start" title="{{ xar_translate('The time when the day begins on the calendar displays') }}">
                Morning starts at:            
            </label>
        </div>
        <div class="xar-col">
            {% set value = xar_modulevar('calendar', 'day_start') %}
            {{ xar_data_input({type: "time", name: "day_start", id: "day_start", value: value, dropdown: "true", seconds: "false", minutes: "false"}) }}&#160;: 00
        </div>
    </div>

    <div class="xar-row">
        <div class="xar-col">
            <label for="day_end" title="{{ xar_translate('The time when the day ends on the calendar displays') }}">
                Evening ends at:
            </label>
        </div>
        <div class="xar-col">
            {% set value = xar_modulevar('calendar', 'day_end') %}
            {{ xar_data_input({type: "time", name: "day_end", id: "day_end", value: value, dropdown: "true", seconds: "false", minutes: "false"}) }}&#160;: 00
        </div>
    </div>

    <div class="xar-row">
        <div class="xar-col">
            <label for="twentyfourhourformat" title="{{ xar_translate('The format for displaying hours and minutes') }}">            
                Time Display Format            
            </label>
        </div>
        <div class="xar-col">
            {% set options = [
                {'id': false, 'name': 'am/pm'},
                {'id': true, 'name': '24 hour'}
            ] %}
            {% set value = xar_modulevar('calendar', 'twentyfourhourformat') %}
            {{ xar_data_input({type: "radio", name: "twentyfourhourformat", id: "twentyfourhourformat", value: value, options: options}) }}
        </div>
    </div>
{% endblock %}