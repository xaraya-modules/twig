{# @calendar/admin/delete_calendar.html.twig #}

{% block delete_calendar %}
{{ include('@calendar/includes/admin-mod-head.html.twig') }}
    <div class="xar-mod-body"><h2>Delete Calendar</h2>
        <div style="margin: auto;text-align: center;">
        <h3>Delete this calendar?</h3>
        <form method="post" action="{{ xar_moduleurl('calendar','admin','delete_calendar') }}">
        <div>
            <input type="hidden" name="authid" id="authid" value="{{ authid }}"/>
            <input type="hidden" name="confirm" id="confirm" value="true"/>
            <input type="hidden" name="calid" id="calid" value="{{ calid }}"/>
    
            <input type="submit" value="{{ confirmlabel }}"/>
        </div>
        </form>
        <br />
        <a href="{{ xar_moduleurl('calendar','admin','view_calendars') }}">Cancel Delete</a><br />
        </div>
        {% if preview %}
          <div style="width: 100%;padding: 3px;">
          {{ preview }}
          </div>
        {% endif %}
    </div>
{% endblock %}