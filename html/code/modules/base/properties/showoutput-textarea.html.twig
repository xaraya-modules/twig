{# @base/properties/showoutput-textarea.html.twig #}

{% block showoutput_textarea %}
{% if layout and layout == 'preformat' %}
        <pre>
        {{ value }}
        </pre>
    {% elseif layout and layout == 'linebreak' %}
        {{ value|nl2br }}
    {% else %}
        {{ value }}
    {% endif %}
{% endblock %}