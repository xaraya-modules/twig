{# @base/blocks/config-content.html.twig #}

{% block config_content %}
<div class="xar-row">
        <div class="xar-col">
            {% set label = 'Enter the text to be displayed' %}
            <label for="content_text_block_{{ _bl_block_id }}" title="{{ label }}" class="xar-form-label">
                Content:
            </label>
        </div>
        <div class="xar-col" style="width: 600px">
            <textarea name="content_text" id="content_text_block_{{ _bl_block_id }}" class="xar-form-textarealarge">{{ xar_prep_display(content_text) }}</textarea>
        </div>
    </div>
    <div class="xar-row">
        <div class="xar-col">
            <label for="hide_empty_block_{{ _bl_block_id }}" title="{{ label }}">
                Hide If Empty
            </label>
        </div>
        <div class="xar-col">
            {% if hide_empty %}
                <input type="checkbox" name="hide_empty" id="hide_empty_block_{{ _bl_block_id }}" value="1" checked="checked"/>
            {% else %}
                <input type="checkbox" name="hide_empty" id="hide_empty_block_{{ _bl_block_id }}" value="1"/>
            {% endif %}
            {% set label = 'Hide the block if it has no content' %}
        </div>
     </div>
    <div class="xar-row">
        <div class="xar-col">
            <label for="hide_errors_block_{{ _bl_block_id }}" title="{{ label }}">
                Hide PHP Errors
            </label>
        </div>
        <div class="xar-col">
            {% if hide_errors %}
                <input type="checkbox" name="hide_errors" id="hide_errors_block_{{ _bl_block_id }}" value="1" checked="checked"/>
            {% else %}
                <input type="checkbox" name="hide_errors" id="hide_errors_block_{{ _bl_block_id }}" value="1"/>
            {% endif %}
            {% set label = 'Hide PHP errors generated by block, otherwise show them as the block content' %}
        </div>
     </div>
    <div class="xar-row">
        <div class="xar-col">
            {% set label = 'Select the type of the content' %}
            <label for="content_type_block_{{ _bl_block_id }}" title="{{ label }}" class="xar-form-label">
                Content Type:
            </label>
        </div>
        <div class="xar-col">
            <select name="content_type" id="content_type_block_{{ _bl_block_id }}">
                {% for loop_key1, loop_item1 in content_types %}{% set loop_index1 = loop.index %}
                    {% if content_type == loop_item1.value %}
                        <option id="content_type_block_{{ _bl_block_id }}_{{ loop_item1.value }}" value="{{ loop_item1.value }}" selected="selected">
                            {{ loop_item1.label }}
                        </option>
                    {% else %}
                        <option id="content_type_block_{{ _bl_block_id }}_{{ loop_item1.value }}" value="{{ loop_item1.value }}">
                            {{ loop_item1.label }}
                        </option>
                    {% endif %}
                {% endfor %}
            </select>
        </div>
    </div>
    <div class="xar-row">
        <div class="xar-col">
            {% set label = 'Custom format passed directly to output template' %}
            <label for="custom_format" title="{{ label }}" class="xar-form-label">
                Custom Format:
            </label>
        </div>
        <div class="xar-col">
            <input type="text" name="custom_format" id="custom_format" value="{{ xar_prep_display(custom_format) }}" maxlength="20" class="xar-form-textmedium"/>
        </div>
    </div>
    <div class="xar-row">
        <div class="xar-col">
            {% set label = 'Date and time block will start' %}
            <label for="start_date_block_content" title="{{ label }}" class="xar-form-label">
                Start Date:
            </label>
        </div>
        <div class="xar-col">
            {{ xar_data_input({id: "start_date_block_content", type: "calendar", name: "start_date", value: start_date}) }}
        </div>
    </div>
    <div class="xar-row">
        <div class="xar-col">
            {% set label = 'Date and time block will end' %}
            <label for="start_date_block_content" title="{{ label }}" class="xar-form-label">
                End Date:
            </label>
        </div>
        <div class="xar-col">
            {{ xar_data_input({id: "end_date_block_content", type: "calendar", name: "end_date", value: end_date}) }}
        </div>
    </div>
{% endblock %}