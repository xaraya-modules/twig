{# @privileges/admin/newrealm.html.twig #}

{% block newrealm %}
{{ include('@privileges/includes/admin-mod-head.html.twig') }}
    <div class="xar-mod-body">
        {{ include('@privileges/includes/admin-realms.html.twig') }}
        <form id="privilegeform" action="{{ xar_moduleurl('privileges','admin','newrealm') }}" method="post" enctype="application/x-www-form-urlencoded">
            <fieldset>
                <legend>Add Realm</legend>
                <div class="xar-row">
                    <div class="xar-col">
                        {% set label = 'Name of the realm' %}
                        <label for="pname" title="{{ label }}" class="xar-form-label">
                            Name:
                        </label>
                    </div>
                    <div class="xar-col">
                        <input type="text" name="name" id="name" value="" size="20" maxlength="20" tabindex="1" class="xar-form-textmedium"/>
                    </div>
                </div>
            </fieldset>
            <div class="xar-form-actions">
                <div class="xar-row">
                    <div class="xar-col"></div>
                    <div class="xar-col">
                        <input type="hidden" name="authid" id="authid" value="{{ authid }}"/>
                        <input type="hidden" name="confirmed" id="confirmed" value="true"/>
                        {% set value = 'Add' %}
                        {{- xar_button({type: "submit", label: label, tabindex: "2"}) -}}
                    </div>
                </div>
            </div>
        </form>
    </div>
{% endblock %}