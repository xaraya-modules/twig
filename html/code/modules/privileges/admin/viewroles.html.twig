{# @privileges/admin/viewroles.html.twig #}

{% block viewroles %}
{{ xar_style({scope: "module", file: "privtree"}) }}
    {{ xar_javascript({scope: "module", module: "privileges", filename: "xarTree.js"}) }}
    <script type="javascript">
