{# @messages/includes/delete-message.html.twig #}

{% block delete_message %}
{% if error is null %}
        <div style="width: 100%; text-align: center;">
            <form action="{{ xar_currenturl() }}" method="post" enctype="application/x-www-form-urlencoded">
               <p id="delete_message">Are you sure you want to delete this message?</p>
                <br />
                {#  Psspl:Added the code for folder type #}
                {% if folder is not null %}
                    <input type="hidden" value="{{ folder }}" name="folder" id="folder"/>    
                {% endif %}
                <input type="hidden" name="id" id="id" value="{{ id }}"/>
                <input type="hidden" name="action" id="action" value="confirmed"/>
                <input type="button" value="{{ xar_translate('Cancel') }}" onclick="javascript:history.go(-1);" class="xar-margin-thickright"/>
		<input type="submit" name="confirmed" id="delete" value="{{ xar_translate('Delete') }}" class="xar-margin-thickright" />
                
            </form>
        </div>
        <br />
    {% else %}
        <div class="xar-mod-head">
            <span class="xar-mod-title">
                Messages
            </span>
        </div>
        <br />
        <div class="xar-norm">
            {{ error }}
        </div>
    {% endif %}
{% endblock %}