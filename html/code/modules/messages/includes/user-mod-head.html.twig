{# @messages/includes/user-mod-head.html.twig #}

{% block user_mod_head %}
<div class="xar-mod-head">
        <span class="xar-mod-title">
            {% if xar_modulevar('messages', 'use_module_alias') %}
                {{ xar_var({scope: "module", module: "messages", name: "module_alias_name"}) }}
            {% else %}
                Private Messages
            {% endif %}
        </span>
        {{ include('@messages/includes/user-menu.html.twig') }}
    </div>
{% endblock %}