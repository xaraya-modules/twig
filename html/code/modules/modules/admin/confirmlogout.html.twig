{# @modules/admin/confirmlogout.html.twig #}

{% block confirmlogout %}
{{ include('@modules/includes/admin-mod-head.html.twig') }}
    <div class="xar-mod-body">
        <h2>Confirm Logout</h2>
        <p>Are you sure? Click "Cancel" to return to the previous admin panel</p>
        <div class="xar-align-center">
        {% set authmodule = xar_var({scope: "module", module: "roles", name: "defaultauthmodule"}) %}
            {% if authmodule %}
        {% set authmodule = xar_coremethod('xarMod', 'getName', [authmodule]) %}[ 
        <a href="{{ xar_moduleurl(authmodule,'user','logout') }}">Logout</a>]{% endif %}[ 
        <a href="javascript:top.history.go(-1)">Cancel</a>]</div>
    </div>
{% endblock %}