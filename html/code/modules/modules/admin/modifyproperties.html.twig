{# @modules/admin/modifyproperties.html.twig #}

{% block modifyproperties %}
{{ include('@modules/includes/admin-mod-head.html.twig') }}
    <div class="xar-mod-body">
        <h2>Modify Properties for Module: {{ displayname }}</h2>
        {% if object %}
            <form action="{{ xar_moduleurl('modules','admin','modifyproperties') }}" method="post" enctype="application/x-www-form-urlencoded">
                {{ xar_data_form({object: object}) }}
                <div class="xar-form-actions">
                    <div class="xar-row">
                        <div class="xar-col"></div>
                        <div class="xar-col">
                            {% if return_url %}
                                <input type="hidden" name="return_url" id="return_url" value="{{ return_url }}"/>
                            {% endif %}
                            <input type="hidden" name="authid" id="authid" value="{{ authid }}"/>
                            <input type="hidden" name="id" id="id" value="{{ id }}"/>
                            <input type="hidden" name="phase" id="phase" value="update"/>
                            {% set label = 'Save Changes' %}
                            {{- xar_button({type: "submit", label: label}) -}}
                        </div>
                    </div>
                </div>
            </form>
        {% else %}
            No Properties Available For {{ displayname }}
        {% endif %}
    </div>
{% endblock %}