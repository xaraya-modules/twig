{# @comments/admin/modify.html.twig #}

{% block modify %}
{# <!-- common admin menu for this module - remove link to the current function --> #}
    {{ include('@comments/includes/admin-mod-head.html.twig') }}
    <div class="xar-mod-body">
      <h2>Edit Item</h2>
        {% set withupload = object.upload %}
        {% set enctype = 'application/x-www-form-urlencoded' %}
        {% if withupload %}
           {% set enctype = 'multipart/form-data' %}
        {% endif %}


        <form method="post" action="{{ xar_currenturl() }}" enctype="{{ enctype }}">

            <fieldset>
                <legend>
                    Modify
                </legend>

                {{ xar_data_form({object: object, tplmodule: "comments", template: "modify"}) }}

             </fieldset>
           <div class="xar-form-input-wrapper-after">
                <input type="hidden" name="authid" id="authid" value="{{ xar_security_authkey() }}" />
                <input type="hidden" name="id" id="id" value="{{ id }}" />
                <input type="hidden" name="confirm" id="confirm" value="true" />
                &#160;&#160;&#160;
                {% set label = 'Save and Edit' %}
                {{- xar_button({type: "submit", value: label}) -}}&#160;
                {% set label = 'Save and Display' %}
                {{- xar_button({type: "submit", value: label, name: "view"}) -}}
            </div>
        </form>
    </div>
{% endblock %}