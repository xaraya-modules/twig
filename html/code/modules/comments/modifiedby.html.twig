{# @comments/modifiedby.html.twig #}

{% extends '@comments/base.html.twig' %}

{% block modulespace %}
{% if postanon == 1 and isauthor == 1 %}
        {% set modifiedbyname = xar_translate('author') %}
    {% else %}
        {% set modifiedbyname = xar_uservar('name') %}
    {% endif %}
    {{ xar_translate('[Modified by: #(1) on #(2)]', modifiedbyname, xar_coremethod('xarLocale', 'formatDate', ["%B %d, %Y %I.%M %p", date().getTimestamp()])) }}
{% endblock %}