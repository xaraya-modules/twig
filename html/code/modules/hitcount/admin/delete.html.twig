{# @hitcount/admin/delete.html.twig #}

{% block delete %}
{{ include('@hitcount/includes/admin-mod-head.html.twig') }}
    <div class="xar-mod-body">
        <h2>Delete Hit Counts</h2>
        <form name="post" id="post" action="{{ xar_moduleurl('hitcount', 'admin', 'delete') }}" method="post" enctype="application/x-www-form-urlencoded">
        <fieldset>
            <legend>
                Confirm Hitcount Deletion
            </legend>
            <div class="xar-form-input-wrapper">
                {% if not modname %}
                    Are you sure you want to delete all hitcounts ?
                {% elseif not itemid %}
                    {{ xar_translate('Are you sure you want to delete all hitcounts for module #(1) ?', modname) }}
                {% else %}
                    {{ xar_translate('Are you sure you want to delete all hitcounts for module #(1) item #(2) ?', modname, itemid) }}
                {% endif %}
             </div>
        </fieldset>
        <div class="xar-form-input-wrapper-after">
           <input type="hidden" name="authid" id="authid" value="{{ authid }}"/>
           <input type="hidden" name="modid" id="modid" value="{{ modid }}"/>
           <input type="hidden" name="itemtype" id="itemtype" value="{{ itemtype }}"/>
            <input type="hidden" name="itemid" id="itemid" value="{{ itemid }}"/>
            <input type="submit" name="confirm" id="confirm" value="{{ xar_translate('Confirm') }}"/>
        </div>
        </form>
    </div>
{% endblock %}