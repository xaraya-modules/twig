{# @installer/errors.html.twig #}

{% extends '@installer/base.html.twig' %}

{% block modulespace %}
{{ include('@installer/includes/user-mod-head.html.twig') }}
    <div class="xar-mod-body">
        <fieldset>
            <legend>Problem From the Installer</legend>
            {% set label = 'System Message' %}
            {{- xar_image({scope: "theme", file: "user-error.png", alt: label, width: "96", height: "96", class: "xar-module-icon"}) -}}
            {% if layout is null %}
                <div style="margin-top: 20px">No error message is available. 
                <br />Please contact the system administrator.</div>
            {% elseif layout == 'no_permission_delete' %}
                <div style="margin-top: 20px">
                    You have no permission to delete the file {{ filename }}
                </div>
            {% elseif layout == 'no_permission_rename' %}
                <div style="margin-top: 20px">
                    You have no permission to rename the file {{ filename }}
                </div>
            {% else %}
                <div style="margin-top: 20px">No error message is available. 
                <br />Please contact the system administrator.</div>
            {% endif %}
        </fieldset>
        <div class="xar-form-actions">
            <div class="xar-row">
                <div class="xar-col"></div>
                <div class="xar-col">
                    {% set label = 'Go back' %}
                    {{- xar_button({type: "cancel", label: label}) -}}
                </div>
            </div>
        </div>
    </div>
{% endblock %}