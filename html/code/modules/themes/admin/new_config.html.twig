{# @themes/admin/new_config.html.twig #}

{% block new_config %}
{{ include('@themes/includes/admin-mod-head.html.twig') }}
    <div class="xar-mod-body">
        <h2>New Configuration Option</h2>

        <form method="post" action="{{ xar_currenturl() }}">
          <fieldset>
            <legend>Item details</legend>
            {{ xar_data_form({object: object, tplmodule: "themes"}) }}
          </fieldset>
          <div class="xar-row">
              <div class="xar-col">
              </div>
              <div class="xar-col">
                  <input type="hidden" name="authid" id="authid" value="{{ xar_coremethod('xarSec', 'genAuthKey') }}"/>
                  <input type="hidden" name="tplmodule" id="tplmodule" value="themes"/>
                  <input type="hidden" name="confirm" id="confirm" value="true"/>
                  {% set label = 'Cancel' %}
                  {{- xar_button({type: "cancel", label: label}) -}}
                  {% set label = 'Create' %}
                  {{- xar_button({type: "submit", label: label}) -}}
              </div>
          </div>
        </form>
    </div>
{% endblock %}