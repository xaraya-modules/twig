{# @themes/admin/export_config.html.twig #}

{% block export_config %}
{{ xar_style({scope: "module", file: "dd"}) }}
    {{ include('@themes/includes/admin-mod-head.html.twig') }}
    <div class="xar-mod-body">
        <h2>Export Theme Definition</h2>
        <form method="post" action="{{ xar_moduleurl('themes','admin','export_config') }}">
            <fieldset>
                <legend>Select Theme</legend>
                <div class="xar-row">
                    <div class="xar-col">
                        <label for="xml" class="xar-form-label">Theme:</label>
                    </div>
                    <div class="xar-col">
                        {{ xar_data_input({type: "objectref", name: "itemid", refobject: "themes", display_prop: "name", store_prop: "regid", onchange: "submit()", value: itemid}) }}
                    </div>
                </div>
            </fieldset>
        </form>
        <form>
            <fieldset>
                <legend>Configuration</legend>
                {% if not xml %}
                    There are no configuration options defined for this theme. Define some <a href="{{ xar_moduleurl('themes','admin','new_config') }}">here</a>.
                {% else %}
                    <div class="xar-row">
                        <div class="xar-col">
                            <label for="xml" class="xar-form-label">Paste this in the theme's <br/>data/configurations-dat.xml file</label>
                        </div>
                        <div class="xar-col">
                            <textarea name="xml" id="xml" class="xar-form-textarealarge" style="width: 40em">{{ xml }}</textarea>
                        </div>
                    </div>
                {% endif %}
            </fieldset>
        </form>
    </div>
{% endblock %}