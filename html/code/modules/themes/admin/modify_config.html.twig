{# @themes/admin/modify_config.html.twig #}

{% block modify_config %}
{{ include('@themes/includes/admin-mod-head.html.twig') }}
    <div class="xar-mod-body">
        <h2>Modify Configuration Option</h2>
        <form method="post" action="{{ xar_currenturl() }}">
          <fieldset>
            <legend>Modify item details</legend>
            {{ xar_data_form({object: object, tplmodule: "themes"}) }}
          </fieldset>
          <div class="xar-row">
              <div class="xar-col">
              </div>
              <div class="xar-col">
                  <input type="hidden" name="authid" id="authid" value="{{ xar_security_authkey() }}"/>
                  <input type="hidden" name="tplmodule" id="tplmodule" value="themes"/>
                  <input type="hidden" name="confirm" id="confirm" value="true"/>
                  {% set label = 'Update' %}
                  {{- xar_button({type: "submit", label: label, name: "update"}) -}}
              </div>
          </div>
        </form>
    </div>
{% endblock %}