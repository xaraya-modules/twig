{# @themes/includes/debug.html.twig #}

{% block debug %}
If debug mode is active, exception messages are visible to the debug administrators, which are defined <a href="{{ xar_moduleurl('roles','admin','modifyconfig',{'tab': 'debugging'}) }}">here</a>.
    <div class="xar-row">
        <div class="xar-col">
            {% set label = 'Debug mode' %}
            <label for="debugmode" title="{{ label }}" class="xar-form-label">            
                Enable debug mode:            
            </label>
        </div>
        <div class="xar-col">
            {% set checked = xar_modvar('themes', 'debugmode') %}
            {{ xar_data_input({type: "checkbox", name: "debugmode", checked: checked}) }}
        </div>
    </div>
    <div class="xar-row">
        <div class="xar-col">
            {% set label = 'Exceptions display' %}
            <label for="exceptionsdisplay" title="{{ label }}" class="xar-form-label">            
                Display variables when showing exceptions            
            </label>
        </div>
        <div class="xar-col">
            {% set checked = xar_coremethod('xarConfigVars', 'get', [null, 'Site.BL.ExceptionDisplay']) %}
            {{ xar_data_input({type: "checkbox", name: "exceptionsdisplay", checked: checked}) }}
        </div>
    </div>
{% endblock %}