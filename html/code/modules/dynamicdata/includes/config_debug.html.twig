{# @dynamicdata/includes/config_debug.html.twig #}

{% block config_debug %}
If debug mode is active, exception messages are visible to the debug administrators, which are defined <a href="{{ xar_moduleurl('roles','admin','modifyconfig',{'tab': 'debugging'}) }}">here</a>.
    <div class="xar-row">
        <div class="xar-col">
            {% set label = 'Debug mode' %}
            <label for="checked" title="{{ label }}" class="xar-form-label">            
                Enable debug mode:            
            </label>
        </div>
        <div class="xar-col">
            {% set checked = xar_modvar('dynamicdata', 'debugmode') %}
            {{ xar_data_input({type: "checkbox", name: "debugmode", checked: checked}) }}
        </div>
    </div>
    <div class="xar-row">
        <div class="xar-col">
            {% set label = 'Show strings generated by the Query class' %}
            <label for="checked" title="{{ label }}" class="xar-form-label">            
                Show Query strings:            
            </label>
        </div>
        <div class="xar-col">
            {% set checked = xar_coremethod('xarConfigVars', 'get', null, 'Site.BL.ShowQueries') %}
            {{ xar_data_input({type: "checkbox", name: "show_queries", checked: checked}) }}
        </div>
    </div>
    <div class="xar-row">
        <div class="xar-col">
            {% set label = 'Suppress database updates' %}
            <label for="checked" title="{{ label }}" class="xar-form-label">            
                Suppress database updates:            
            </label>
        </div>
        <div class="xar-col">
            {% set checked = xar_modvar('dynamicdata', 'suppress_updates') %}
            {{ xar_data_input({type: "checkbox", name: "suppress_updates", checked: checked}) }}
            <span style="color: red">If this is checked, no data will be written to the database</span>
        </div>
    </div>
{% endblock %}