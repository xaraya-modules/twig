{# @dynamicdata/includes/config_display.html.twig #}

{% block config_display %}
<div class="xar-row">
        <div class="xar-col" style="padding-bottom: 10px;">
            {% set value = xar_unserialize(xar_modulevar('dynamicdata', 'administrators'))|join(',') %}
            Enter a list of user names separated by commas. Incorrect user names  will be ignored.<br />
            {% set label = 'These users have full access to the dynamicdata module' %}
            <label for="administrators" title="{{ label }}" class="xar-form-label">
                List of Administrators:
            </label>
        </div>
        <div class="xar-col">
            {{ xar_data_input({type: "textarea", name: "administrators", value: value}) }}
        </div>
    </div>
{% endblock %}