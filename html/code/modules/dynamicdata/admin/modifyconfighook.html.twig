{# @dynamicdata/admin/modifyconfighook.html.twig #}

{% block modifyconfighook %}
{# <!-- You can use different admin-modifyconfighook-[objectname].xd templates for different objects --> #}
    <table class="xar-table xar-items">
        <tr>
          <th class="xar-align-center" colspan="7">
            {{ labels.dynamicdata }} [ <a href="{{ link }}">{{ labels.config }}</a>]
          </th>
        </tr>
        {% if fields %}
            <tr>
                <th>{{ labels.id }}</th>
                <th>{{ labels.name }}</th>
                <th>{{ labels.label }}</th>
                <th>{{ labels.type }}</th>
                <th>{{ labels.defaultvalue }}</th>
                <th>{{ labels.source }}</th>
                <th>{{ labels.configuration }}</th>
            </tr>
            {% for field in fields %}
                <tr class="xar-align-left xar-valign-middle">
                    <td>{{ field.id }}</td>
                    <td>{{ field.name }}</td>
                    <td>{{ field.label }}</td>
                    <td>
                        {{ xar_data_output({property: fieldtypeprop, value: field['type']}) }}
                    </td>
                    <td>
                        {{ field.defaultvalue }}
                    </td>
                    <td>{{ field.source }}</td>
                    <td>
                        {{ field.configuration }}
                    </td>
                </tr>
            {% endfor %}
        {% endif %}
    </table>
{% endblock %}