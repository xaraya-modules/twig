{# @dynamicdata/properties/showinput-itemid.html.twig #}

{% block showinput_itemid %}
{% if layout == 'filter' %} 
        <input type="text" name="{{ name }}" id="{{ id }}" value=""/>
    {% elseif value %}
        {{ value }} 
        <input type="hidden" name="{{ name }}" id="{{ id }}" value="{{ value }}"/>
    {% else %}
        Auto allocated 
        <input type="hidden" name="{{ name }}" id="{{ id }}" value="0"/>
    {% endif %}
{% endblock %}