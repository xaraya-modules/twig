{# @publications/objects/generic/input.html.twig #}

{% block input %}
{{ xar_data_input({property: properties['id'], hidden: "hidden"}) }}
    <div class="xar-row">
        <div class="xar-col-condensed">
            {% set label = 'Name' %}
            {{ xar_data_label({property: properties['name'], for: "id", label: label}) }}
        </div>
        <div class="xar-col-expanded">
            {{ xar_data_input({property: properties['name']}) }}
        </div>
    </div>
    <div class="xar-row">
        <div class="xar-col-condensed">
            {% set label = 'Title' %}
            {{ xar_data_label({property: properties['title'], for: "id", label: label}) }}
        </div>
        <div class="xar-col-expanded">
            {{ xar_data_input({property: properties['title']}) }}
        </div>
    </div>
    <div class="xar-row">
        <div class="xar-col-condensed">
            {% set label = 'Description' %}
            {{ xar_data_label({property: properties['description'], for: "id", label: label}) }}
        </div>
        <div class="xar-col-expanded">
            {{ xar_data_input({property: properties['description']}) }}
        </div>
    </div>
    <div class="xar-row">
        <div class="xar-col-condensed">
            {% set label = 'Summary' %}
            {{ xar_data_label({property: properties['summary'], for: "id", label: label}) }}
        </div>
        <div class="xar-col-expanded">
            {{ xar_data_input({property: properties['summary'], style: "width: 700px"}) }}
        </div>
    </div>
    <div class="xar-row">
        <div class="xar-col-condensed">
            {% set label = 'Body 1' %}
            {{ xar_data_label({property: properties['body_1'], for: "id", label: label}) }}
        </div>
        <div class="xar-col-expanded">
            {{ xar_data_input({property: properties['body_1'], style: "width: 700px"}) }}
        </div>
    </div>
    <div class="xar-row">
        <div class="xar-col-condensed">
            {% set label = 'Body 2' %}
            {{ xar_data_label({property: properties['body_2'], for: "id", label: label}) }}
        </div>
        <div class="xar-col-expanded">
            {{ xar_data_input({property: properties['body_2'], style: "width: 700px"}) }}
        </div>
    </div>
    <div class="xar-row">
        <div class="xar-col-condensed">
            {% set label = 'Body 3' %}
            {{ xar_data_label({property: properties['body_3'], for: "id", label: label}) }}
        </div>
        <div class="xar-col-expanded">
            {{ xar_data_input({property: properties['body_3'], style: "width: 700px"}) }}
        </div>
    </div>
    <div class="xar-row">
        <div class="xar-col-condensed">
            {% set label = 'Notes' %}
            {{ xar_data_label({property: properties['notes'], for: "id", label: label}) }}
        </div>
        <div class="xar-col-expanded">
            {{ xar_data_input({property: properties['notes']}) }}
        </div>
    </div>
    {% if not properties['parent'].value %}
        <div class="xar-row">
            <div class="xar-col-expanded">
                {{ xar_data_input({property: properties['position']}) }}
            </div>
        </div>
    {% endif %}
{% endblock %}