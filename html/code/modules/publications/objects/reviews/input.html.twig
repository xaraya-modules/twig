{# @publications/objects/reviews/input.html.twig #}

{% block input %}
{{ xar_data_input({property: properties['id'], hidden: "hidden"}) }}
    <div class="xar-row">
        <div class="xar-col-condensed">
            {% set label = 'Name' %}
            {{ xar_data_label({property: properties['name'], for: "id", label: label}) }}
        </div>
        <div class="xar-col-expanded">
            {{ xar_data_input({property: properties['name']}) }}
        </div>
    </div>
    <div class="xar-row">
        <div class="xar-col-condensed">
            {% set label = 'Title' %}
            {{ xar_data_label({property: properties['title'], for: "id", label: label}) }}
        </div>
        <div class="xar-col-expanded">
            {{ xar_data_input({property: properties['title']}) }}
        </div>
    </div>
    <div class="xar-row">
        <div class="xar-col-condensed">
            {% set label = 'Description' %}
            {{ xar_data_label({property: properties['description'], for: "id", label: label}) }}
        </div>
        <div class="xar-col-expanded">
            {{ xar_data_input({property: properties['description']}) }}
        </div>
    </div>
    <div class="xar-row">
        <div class="xar-col-condensed">
            {% set label = 'Review' %}
            {{ xar_data_label({property: properties['review'], for: "id", label: label}) }}
        </div>
        <div class="xar-col-expanded">
            {{ xar_data_input({property: properties['review'], style: "width: 700px"}) }}
        </div>
    </div>
    <div class="xar-row">
        <div class="xar-col-condensed">
            {% set label = 'Related Link' %}
            {{ xar_data_label({property: properties['related_link'], for: "id", label: label}) }}
        </div>
        <div class="xar-col-expanded">
            {{ xar_data_input({property: properties['related_link']}) }}
        </div>
    </div>
    <div class="xar-row">
        <div class="xar-col-condensed">
            {% set label = 'Image' %}
            {{ xar_data_label({property: properties['image'], for: "id", label: label}) }}
        </div>
        <div class="xar-col-expanded">
            {{ xar_data_input({property: properties['image']}) }}
        </div>
    </div>
    {% if not properties['parent'].value %}
        <div class="xar-row">
            <div class="xar-col-expanded">
                {{ xar_data_input({property: properties['position']}) }}
            </div>
        </div>
    {% endif %}
{% endblock %}