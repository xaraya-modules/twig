{# @publications/objects/catalogue/input.html.twig #}

{% block input %}
{{ xar_data_input({property: properties['id'], hidden: "hidden"}) }}
    <div class="xar-row">
        <div class="xar-col-condensed">
            {% set label = 'Name' %}
            {{ xar_data_label({property: properties['name'], for: "id", label: label}) }}
        </div>
        <div class="xar-col-expanded">
            {{ xar_data_input({property: properties['name']}) }}
        </div>
    </div>
    <div class="xar-row">
        <div class="xar-col-condensed">
            {% set label = 'Title' %}
            {{ xar_data_label({property: properties['title'], for: "id", label: label}) }}
        </div>
        <div class="xar-col-expanded">
            {{ xar_data_input({property: properties['title']}) }}
        </div>
    </div>
    <div class="xar-row">
        <div class="xar-col-condensed">
            {% set label = 'Description' %}
            {{ xar_data_label({property: properties['description'], for: "id", label: label}) }}
        </div>
        <div class="xar-col-expanded">
            {{ xar_data_input({property: properties['description']}) }}
        </div>
    </div>
    <div class="xar-row">
        <div class="xar-col-condensed">
            {% set label = 'Summary' %}
            {{ xar_data_label({property: properties['summary'], for: "id", label: label}) }}
        </div>
        <div class="xar-col-expanded">
            {{ xar_data_input({property: properties['summary'], style: "width: 700px"}) }}
        </div>
    </div>
    <div class="xar-row">
        <div class="xar-col-condensed">
            {% set label = 'Detail' %}
            {{ xar_data_label({property: properties['detail'], for: "id", label: label}) }}
        </div>
        <div class="xar-col-expanded">
            {{ xar_data_input({property: properties['detail'], style: "width: 700px"}) }}
        </div>
    </div>
    <div class="xar-row">
        <div class="xar-col-condensed">
            {% set label = 'Summary Image' %}
            {{ xar_data_label({property: properties['summary_image'], for: "id", label: label}) }}
        </div>
        <div class="xar-col-expanded">
            {{ xar_data_input({property: properties['summary_image']}) }}
        </div>
    </div>
    <div class="xar-row">
        <div class="xar-col-condensed">
            {% set label = 'Detail Image' %}
            {{ xar_data_label({property: properties['detail_image'], for: "id", label: label}) }}
        </div>
        <div class="xar-col-expanded">
            {{ xar_data_input({property: properties['detail_image']}) }}
        </div>
    </div>
    <div class="xar-row">
        <div class="xar-col-condensed">
            {% set label = 'Download' %}
            {{ xar_data_label({property: properties['download'], for: "id", label: label}) }}
        </div>
        <div class="xar-col-expanded">
            {{ xar_data_input({property: properties['download']}) }}
        </div>
    </div>
    <div class="xar-row">
        <div class="xar-col-condensed">
            {% set label = 'Notes' %}
            {{ xar_data_label({property: properties['notes'], for: "id", label: label}) }}
        </div>
        <div class="xar-col-expanded">
            {{ xar_data_input({property: properties['notes']}) }}
        </div>
    </div>
    {% if not properties['parent'].value %}
        <div class="xar-row">
            <div class="xar-col-expanded">
                {{ xar_data_input({property: properties['position']}) }}
            </div>
        </div>
    {% endif %}
{% endblock %}