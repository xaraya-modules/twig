{% block modify_admin %}
<div class="xar-form-input-wrapper">
        <label for="numitems{{ blockid }}" class="help xar-form-label" title="{{ xar_translate('Enter the number of items that you wish to display.') }}">
            Number of items
        </label>
        <input type="text" name="numitems" id="numitems{{ blockid }}" value="{{ numitems }}" size="5" maxlength="5" />
    </div>
{% endblock %}