{# @publications/blocks/modify-filler.html.twig #}

{% block modify_filler %}
<div class="xar-row">
        <div class="xar-col">
            <label class="xar-form-label help" title="{{ xar_translate('Choose the publication type you want to display with top items.') }}" for="pubtype_id{{ blockid }}"> 
                Publication Type
            </label> 
        </div>
        <div class="xar-col">
            {% set firstline = 'All' %}
            {% set firstline = {'id': 0, 'name': firstline} %}
            {% set options = xar_apifunc('publications', 'user', 'get_pubtypes') %}        
            {{ xar_data_input({type: "dropdown", name: "pubtype_id", firstline: firstline, options: options, value: pubtype_id}) }}
        </div>
    </div>
    <div class="xar-row">
        <div class="xar-col">
            <label class="xar-form-label help" title="{{ {{ xar_translate('Choose the state (e.g. Approved, Front Page) }} for the featured items.') }}" for="state{{ blockid }}"> 
                Status             
            </label>
        </div>
        <div class="xar-col">
            {% set options = [
                    {'id': '2, 3', 'name': xar_translate('All Published')},
                    {'id': '3', 'name': xar_translate('Frontpage')},
                    {'id': '2', 'name': xar_translate('Approved')}
                ] %}        
            {{ xar_data_input({type: "dropdown", name: "state", options: options, value: state}) }}
        </div>
    </div>
    <div class="xar-row">
        <div class="xar-col">
            <label for="fillerid{{ blockid }}" class="help xar-form-label" title="{{ xar_translate('Choose the publication to display as a featured item.') }}">
                Featured Publication        
            </label>
        </div>
        <div class="xar-col">
            {% set firstline = '--- choose an article to be featured ---' %}
            {% set firstline = {'id': 0, 'name': firstline} %}
            {{ xar_data_input({type: "dropdown", name: "fillerid", firstline: firstline, options: filtereditems, value: fillerid}) }}
        </div>
    </div>
    <div class="xar-row">
        <div class="xar-col">
            <label class="help" title="{{ xar_translate('The type of display to show in this block') }}" for="displaytype{{ blockid }}">
                Display Type            
            </label>
        </div>
        <div class="xar-col">
            {% set options = [
                    {'id': 'summary', 'name': xar_translate('Summary Display')},
                    {'id': 'detail', 'name': xar_translate('Detail Display')},
                ] %}        
            {{ xar_data_input({type: "dropdown", name: "displaytype", options: options}) }}
        </div>
    </div>
    <div class="xar-row">
        <div class="xar-col">
            <label for="alttitle{{ blockid }}" class="help xar-form-label" title="{{ xar_translate('If you wish to give the article an alternative title to be displayed as a featured item, enter the name here.') }}">
                Alternate Title        
            </label> 
        </div>
        <div class="xar-col">
            <input type="text" name="alttitle" id="alttitle{{ blockid }}" value="{{ alttitle }}" size="24" maxlength="62" />
        </div>
    </div>
    <div class="xar-row">
        <div class="xar-col">
            <label class="help" title="{{ xar_translate('If you wish to give the article an alternative text to be displayed as a featured item, enter the summary here.') }}" for="alttext{{ blockid }}">
                Alternate Text        
            </label>
        </div>
        <div class="xar-col">
            <textarea name="alttext" rows="5" cols="50" id="alttext{{ blockid }}">{{ alttext }}</textarea>
        </div>
    </div>
{% endblock %}