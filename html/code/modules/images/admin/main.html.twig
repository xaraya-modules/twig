{# @images/admin/main.html.twig #}

{% block main %}
{#   License: GPL http://www.gnu.org/copyleft/gpl.html  #}
<div class="xar-mod-head">
  <span class="xar-mod-title">{{ xar_translate('Images Administration') }}</span>
</div>
<div class="xar-mod-body">
  {{ include('@images/includes/admin-menu.html.twig') }}
  <img src="{{ xar_imageurl('module-generic.png', 'base') }}" alt="official icon" width="96" height="96" class="xar-module-icon" />
  <h2>
    {{ xar_translate('Overview') }}
  </h2>
  <h3>
    {{ xar_translate('What is it?') }}
  </h3>
  <p>
  <em>{{ xar_translate('Images is a Xaraya Utility Module.') }}</em>
  {{ xar_translate('It is currently responsible for basic image manipulation, including the following:') }}
    <ul>
        <li>{{ xar_translate('Resize Image files') }}</li>
        <li>{{ xar_translate('Crop image files') }}</li>
        <li>{{ xar_translate('Rotate image files') }}</li>
        <li>{{ xar_translate('Add text to an image file (think buttons here...)') }}</li>
        <li>...</li>
    </ul>
  </p>
  <h3>
    {{ xar_translate('How to use it?') }}
  </h3>

    <h4>
        {{ xar_translate('Image Tags') }}
    </h4>
    <p>
        <pre>&lt;xar:image-resize src="FILEID" [width="([0-9]+)(px|%)" [height="([0-9]+)(px|%)"]] [constrain="0|1"] label="TEXT" /&gt;</pre>
    </p>
    <p>
        {{ xar_translate('The IMAGE tag is useful for displaying (cached) images at different proportions. Images are resized according
            to the height/width values you specify with the resulting image cached for faster displaying later on. Note: Any other attribute
            not listed will be passed directly on to the resultant img tag.') }}
    </p>
    <p>
        {{ xar_translate('Examples:') }}
        <p>
            {{ xar_translate('Resize an image\'s width while keeping the proportions:') }}<br />
            <br />
            <pre>&lt;xar:image-resize src="23" width="92px" constrain="1" label="my logo" /&gt;</pre>
        </p>
        <p>
            {{ xar_translate('Apply some pre-defined image processing (e.g. watermark):') }}<br />
            <br />
            <pre>&lt;xar:image-resize src="test/image.jpg" setting="JPEG 800 x 600" label="my image" /&gt;</pre>
        </p>
    </p>
    <h3>
        {{ xar_translate('Included Blocks') }}
    </h3>
    <p>
        {{ xar_translate('There are no included blocks.') }}
    </p>
    <h3>
        {{ xar_translate('Privileges') }}
    </h3>
    <p>
        {{ xar_translate('The Images module only has the Admin privilege to assign. You will need this level if you want to set the general settings for the Images module.
        The Images module interacts with the uploads module, so make sure you set appropriate levels for that module as well.
        Take special note on the approval of files in the uploads module. Only files that have been approved will normally be accessible by standard users, or you need to assign them the EDIT privilege for the uploads.') }}
    </p>
        {% if xar_modulevar('images', 'upgrade-1.0.0') %}
        <h3>
        {{ xar_translate('Upgrade from version 1.0.0') }}
        </h3>
        <p>
            {{ xar_translate('The naming convention for derivative images has changed since version 1.0.0. So you can delete the old derivative images, and new derivative images will be created as needed in the same directory...') }}
        </p>
        {% endif %}
  <h3>{{ xar_translate('Further Information') }}</h3>
  <p>
       {{ xar_translate('Extended information about this module can be found at') }}<a title="{{ xar_translate('Images Module - Xaraya Extension 152') }}" href="http://www.xaraya.com/index.php/release/152.html">Xaraya Extension and Releases</a>.
       </p>
      <ul>
          <li>{{ xar_translate('Click on Version History tab at the bottom to get the latest release information.') }}
          </li>
          <li>{{ xar_translate('Related tutorials and documentation on Images found at') }} <a href="http://www.xaraya.com/index.php/keywords/images/" title="{{ xar_translate('Related documentation on Images') }}">{{ xar_translate('Xaraya Documentation.') }}</a>
          </li>
      </ul>
      <p class="xar-sub">
         <strong>&#160;{{ xar_translate('Images module - Overview') }}</strong><br />&#160;{{ xar_translate('Version') }} 1.1.0&#160; {{ xar_localedate('1130972400', 'short', '') }}
  </p>
</div>
{% endblock %}