{# @categories/includes/navigation-rootcats.html.twig #}

{% block navigation_rootcats %}
<p>
        {{ cattitle }} : [ 
        {% for loop_key1, loop_item1 in catitems %}{% set loop_index1 = loop.index %}
            {{ loop_item1['catjoin'] }} 
            {% if not loop_item1['catlink'] %}
                {{ loop_item1['catlabel'] }} 
                {% else %}
                <a href="{{ loop_item1['catlink'] }}">
                    {{ loop_item1['catlabel'] }}
                </a>
            {% endif %}
        {% endfor %}
        ] 
    </p>
{% endblock %}