{# @categories/admin/modifyhook.html.twig #}

{% block modifyhook %}
{% set firstline = xar_translate('Select Category') %}
    {% if preview %}
        {# <!-- Note: we might get a single value here instead of an array, if there is only one tree --> #}
        {% set categories = xar_findvar('hookedcategories_categories', categories, 'isset', []) %}
        {% if categories is not iterable %}
            {% set categories = [categories] %}
        {% endif %}
        {{ xar_data_input({type: "categories", name: "hookedcategories", module: module, itemtype: itemtype, itemid: itemid, firstline: firstline, categories: categories}) }}
    {% else %}
        {{ xar_data_input({type: "categories", name: "hookedcategories", module: module, itemtype: itemtype, itemid: itemid, firstline: firstline}) }}
    {% endif %}
{% endblock %}