{# @categories/admin/modify.html.twig #}

{% block modify %}
{{ include('@categories/includes/admin-mod-head.html.twig') }}
    <div class="xar-mod-body">
        <h2>
            Modify Category
        </h2>
        <form action="{{ xar_moduleurl('categories','admin','update') }}" method="post" enctype="application/x-www-form-urlencoded">
            <input type="hidden" name="authid" id="authid" value="{{ xar_coremethod('xarSec', 'genAuthKey') }}"/>
            <fieldset class="xar-norm">
                <legend>
                    <strong>
                    Category</strong>
                </legend>
                {{ xar_data_form({object: object}) }}
            </fieldset>
            <fieldset class="xar-norm">
                <div class="xar-row">
                    <div class="xar-col">
                    </div>
                    <div class="xar-col">
                        <input type="hidden" name="itemid" id="itemid" value="{{ itemid }}"/>
                        <input type="hidden" name="return_url" id="return_url" value="{{ return_url }}"/>
                        <input type="hidden" name="itemtype" value="{{ itemtype }}"/>
                        {% set label = 'Update' %}
                        {{- xar_button({type: "submit", label: label}) -}}
                        <input type="hidden" name="creating" id="creating" value="false"/>
                        {# <!--
                            <input type="reset" value="{{ xar_translate('Reset') }}"/>
                        --> #}
                    </div>
                </div>
            </fieldset>
        </form>
    </div>
{% endblock %}