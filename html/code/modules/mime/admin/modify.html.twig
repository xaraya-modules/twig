{# @mime/admin/modify.html.twig #}

{% block modify %}
{{ include('@mime/includes/admin-mod-head.html.twig') }}
    <div class="xar-mod-body">
        <h2>
            {{ xar_translate('Modify Item #(1) in #(2)', object.itemid, object.label) }}
        </h2>

        {% if preview is not null %}
            <fieldset>
                <legend>Preview</legend>
                {{ xar_data_display({object: object, tplmodule: tplmodule}) }}
            </fieldset>
        {% endif %}

        <form method="post" action="{{ xar_currenturl() }}">
          <fieldset>
            <legend>Modify item details</legend>
            {{ xar_data_form({object: object, tplmodule: tplmodule}) }}
          </fieldset>
          <fieldset>
            <div class="xar-align-center">
                <input type="hidden" name="authid" id="authid" value="{{ authid }}"/>
                <input type="hidden" name="name" id="name" value="{{ object.name }}"/>
                <input type="hidden" name="itemid" id="itemid" value="{{ object.itemid }}"/>
                <input type="hidden" name="tplmodule" id="tplmodule" value="{{ tplmodule }}"/>
                <input type="hidden" name="confirm" id="confirm" value="true"/>
                {% set label = 'Update' %}
                <input type="submit" value="{{ label }}" class="xar-margin-thickleft"/>
            </div>
          </fieldset>
        </form>
    </div>
{% endblock %}