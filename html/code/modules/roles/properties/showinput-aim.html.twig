{# @roles/properties/showinput-aim.html.twig #}

{% block showinput_aim %}
{% set check = 'check' %}
    {% set preview = 'preview' %}
    {% if not tabindex %}
        <input type="text" name="{{ name }}" value="{{ value }}" size="{{ size }}" maxlength="{{ maxlength }}" id="{{ id }}" class="xar-form-textlong"/>
    {% else %}
        <input type="text" name="{{ name }}" value="{{ value }}" size="{{ size }}" maxlength="{{ maxlength }}" id="{{ id }}" tabindex="{{ tabindex }}" class="xar-form-textlong"/>
    {% endif %}
    {% if link %}
        [<a href="{{ link }}" target="{{ preview }}">{{ check }}</a>]
    {% endif %}
    {{ include('@base/includes/dataproperty_additions.html.twig') }}
{% endblock %}