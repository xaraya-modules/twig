{# @workflow/test_run.html.twig #}

{% extends '@workflow/base.html.twig' %}

{% block modulespace %}
{# <!-- this relies on $config and $item from test_run --> #}
  <div class="xar-mod-head">
    <span class="xar-mod-title">
      Workflow Module
    </span>
  </div>
  <div class="xar-mod-body">
    {{ include('@workflow/includes/user_bar.html.twig') }}
    <div style="margin: auto;">
      <h3>Workflow Test Run</h3>
      {% if warning %}
        <p><strong>Requirement:</strong>{{ warning }}</p>
      {% endif %}
      {{ include('@workflow/includes/test_trackeritem.html.twig') }}
      {{ xar_workflow_actions({name: "actions", config: config, item: item, title: item['marking'], template: item['marking']}) }}
      {{ include('@workflow/includes/test_footer.html.twig') }}
    </div>
  </div>
{% endblock %}