{# @workflow/properties/showinput-workflows.html.twig #}

{% block showinput_workflows %}
{% if not class %}
        {% set class = '' %}
    {% endif %}

    {% if style %}
        {% set textareasource = 'textarea' ~ id ~ ' {' ~ style ~ '}' %}
    {% elseif class %}
        {# <!-- do nothing --> #}
        {% set textareasource = 'textarea' ~ id ~ ' {}' %}
    {% elseif rows and cols %}
        {% set textareasource = 'textarea' ~ id ~ ' {
                width: ' ~ cols ~ 'em;
                height: ' ~ (rows * 1.6)|round ~ 'em;
            }' %}
    {% elseif rows %}
        {% set textareasource = 'textarea' ~ id ~ ' {
                height: ' ~ (rows * 1.6)|round ~ 'em;
            }' %}
    {% elseif cols %}
        {% set textareasource = 'textarea' ~ id ~ ' {
                width: '~  cols ~ 'em;
            }' %}
    {% else %}
        {# <!-- do nothing --> #}
        {% set textareasource = 'textarea' ~ id ~ ' {}' %}
    {% endif %}
    
    {{ xar_style({method: "embed", source: textareasource, media: "all"}) }}
    <textarea name="{{ name }}" id="{{ id }}" tabindex="{{ tabindex }}" class="{{ class }}">{{ value }}</textarea>
    {{ include('@base/includes/dataproperty_additions.html.twig') }}
{% endblock %}