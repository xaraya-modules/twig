{% if onchange is not null %}
      {% set evt_change = onchange %}
    {% else %}
      {% set evt_change = 'return true;' %}
    {% endif %}

    <input type="text" name="input_type_{{ name }}" id="{{ id }}_input_type" value="{{ input_type }}" hidden="hidden"/>
    {% if input_type == 'dropdown' %}
		{% if layout == 'monthyear' %}
			{{ include('@property/date/includes/monthyeartemplate-input.html.twig') }}
		{% elseif layout == 'daymonth' %}
			{{ include('@property/date/includes/daymonthtemplate-input.html.twig') }}
		{% else %}
			{{ include('@property/date/includes/datetemplate-input.html.twig') }}
		{% endif %}
    {% else %}
    	<input type="date" name="{{ name }}" id="{{ id }}" value="{{ value }}"/>
    {% endif %}

