{# <!-- Pager for displaying prev page links on multi-page documents --> #}

    {# <!-- Display first-page link if there is more than one page and we are not on that page --> #}
    {% if totalpages is not null %}
        <div class="xar-pager">
            {% if currentpagenum != firstpagenum %}
                <a title="{{ xar_translate('First page') }}" href="{{ firsturl }}">&lt;&lt;</a>
            {% else %}
                &#160;
            {% endif %}

            {# <!-- Display previous-page link if we are not on the first page --> #}
            {% if currentpagenum != firstpagenum %}
                &#160;<a title="{{ xar_translate('Previous page') }}" href="{{ prevpageurl }}">{{ xar_translate('prev') }}  ({{ prevpage }}/{{ totalpages }})</a>
            {% endif %}
        </div>
    {% else %}
        &#160;
    {% endif %}
